extends Node3D

func _ready():
    var player = load("res://Player.tscn").instantiate()
    player.global_transform.origin = Vector3(0, 1, 0)
    add_child(player)

    var villager = load("res://Villager.tscn").instantiate()
    villager.global_transform.origin = Vector3(5, 1, 5)
    add_child(villager)

    var enemy = load("res://Enemy.tscn").instantiate()
    enemy.global_transform.origin = Vector3(-5, 1, -5)
    enemy.target = player
    add_child(enemy)

    # Quest manager
    var quest_manager = load("res://QuestManager.gd").new()
    get_tree().root.add_child(quest_manager)
